<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--style for Text views -->
    <style name="text_view_toolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_font_size</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_view_main">
        <item name="android:textColor">@color/ColorTextMain</item>
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_view_normal">
        <item name="android:textColor">@color/ColorTextSec</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:singleLine">false</item>
    </style>


</resources>
